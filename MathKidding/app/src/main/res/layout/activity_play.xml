<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f73636"
    tools:context="com.wordpress.tahmidcse.mathkidding.PlayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bar_pl"
        android:background="@drawable/side_nav_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_operation"
            android:text="@string/title_activity_add_play"
            android:textSize="30sp"
            android:textColor="#c8cdce"
            android:textAlignment="center"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b29095"
        android:layout_below="@+id/bar_pl">

        <TextView
            android:text="Timer"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/timer"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/timer"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <TextView
                    android:text="প্রশ্নঃ"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/question"
                    android:background="@drawable/button"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/eq_layout"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:background="@drawable/button"
                    android:layout_below="@+id/question">

                    <TextView
                        android:text="Equation"
                        android:layout_width="wrap_content"
                        android:id="@+id/equation"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:layout_centerHorizontal="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_im_1"
                        android:layout_below="@id/equation"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_im_2"
                        android:layout_below="@+id/c_im_1"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_im_3"
                        android:layout_below="@+id/c_im_2"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_im_4"
                        android:layout_below="@+id/c_im_3"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/c_im_5"
                        android:layout_below="@+id/c_im_4"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <TextView
                    android:text="উত্তরঃ"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/answer"
                    android:layout_below="@+id/eq_layout"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/answer">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/op_1"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/ans_a"
                            android:text="tdytdtgfh"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:onClick="check1"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/op_2"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/ans_b"
                            android:text="tdytdtgfh"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:onClick="check2"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/op_3"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/ans_c"
                            android:text="tdytdtgfh"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:onClick="check3"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/op_4"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/ans_d"
                            android:text="tdytdtgfh"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:onClick="check4"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
