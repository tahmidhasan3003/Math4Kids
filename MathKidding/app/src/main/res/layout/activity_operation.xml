<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_operation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f73636"
    tools:context="com.wordpress.tahmidcse.mathkidding.OperationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bar_lv"
        android:background="@drawable/side_nav_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_operation"
            android:text="চল শুরু করি"
            android:textSize="30sp"
            android:textColor="#c8cdce"
            android:textAlignment="center"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_lv"
        android:background="#c18686">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/star_0"
                    android:background="@drawable/button"
                    android:id="@+id/im_op_1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp" />

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_count"
                    android:src="@drawable/pic_count"
                    android:layout_alignStart="@+id/im_op_1"
                    android:layout_below="@+id/im_op_1"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:src="@drawable/lock"
                    android:id="@+id/im_op_2"
                    android:layout_marginEnd="40dp"
                    android:layout_above="@+id/im_add"
                    android:layout_alignParentEnd="true"/>

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_add"
                    android:src="@drawable/pic_plus"
                    android:layout_alignStart="@+id/im_op_2"
                    android:layout_below="@+id/im_count"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:src="@drawable/lock"
                    android:id="@+id/im_op_3"
                    android:layout_above="@+id/im_sub"
                    android:layout_alignStart="@+id/im_op_1"/>

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_sub"
                    android:src="@drawable/pic_minus"
                    android:layout_alignStart="@+id/im_op_1"
                    android:layout_below="@+id/im_add"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:src="@drawable/lock"
                    android:id="@+id/im_op_4"
                    android:layout_above="@+id/im_mul"
                    android:layout_alignStart="@+id/im_op_2"/>

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_mul"
                    android:src="@drawable/pic_multiply"
                    android:layout_alignStart="@+id/im_op_2"
                    android:layout_below="@+id/im_sub"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:src="@drawable/lock"
                    android:id="@+id/im_op_5"
                    android:layout_above="@+id/im_div"
                    android:layout_alignStart="@+id/im_op_1"/>

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_div"
                    android:src="@drawable/pic_divide"
                    android:layout_alignStart="@+id/im_op_1"
                    android:layout_below="@+id/im_mul"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:src="@drawable/lock"
                    android:id="@+id/im_op_6"
                    android:layout_above="@+id/im_sorol"
                    android:layout_alignStart="@+id/im_op_2"/>

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_sorol"
                    android:src="@drawable/pic_sorol"
                    android:layout_alignStart="@+id/im_op_2"
                    android:layout_below="@+id/im_div"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
