<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f73636"
    tools:context="com.wordpress.tahmidcse.mathkidding.LevelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bar_lv"
        android:background="@drawable/side_nav_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_operation"
            android:text="Operation"
            android:textSize="30sp"
            android:textColor="#c8cdce"
            android:textAlignment="center"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_lv"
        android:background="#c18686">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:layout_marginTop="30dp"
                    android:id="@+id/im_lv_1"
                    android:src="@drawable/lock"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    />
                <Button
                    android:text="১ম ধাপ"
                    android:layout_below="@+id/im_lv_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_lv_1"
                    android:background="@drawable/button"
                    android:textSize="32dp"
                    android:layout_marginStart="35dp"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_lv_2"
                    android:src="@drawable/lock"
                    android:layout_alignBaseline="@+id/im_lv_1"
                    android:layout_alignBottom="@+id/im_lv_1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    />

                <Button
                    android:text="২য় ধাপ"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_lv_2"
                    android:background="@drawable/button"
                    android:textSize="32dp"
                    android:layout_alignBaseline="@+id/but_lv_1"
                    android:layout_alignBottom="@+id/but_lv_1"
                    android:layout_marginEnd="35dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_lv_3"
                    android:src="@drawable/lock"
                    android:layout_below="@+id/but_lv_1"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    />

                <Button
                    android:text="৩য় ধাপ"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_lv_3"
                    android:background="@drawable/button"
                    android:layout_marginTop="0dp"
                    android:textSize="32dp"
                    android:layout_below="@+id/im_lv_3"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_lv_4"
                    android:src="@drawable/lock"
                    android:layout_below="@+id/but_lv_3"
                    android:layout_marginTop="40dp"
                    android:layout_alignStart="@+id/im_lv_1"
                    />

                <Button
                    android:text="৪র্থ ধাপ"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_lv_4"
                    android:background="@drawable/button"
                    android:layout_marginTop="0dp"
                    android:textSize="32dp"
                    android:layout_below="@+id/im_lv_4"
                    android:layout_alignStart="@+id/but_lv_1"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button"
                    android:id="@+id/im_lv_5"
                    android:src="@drawable/lock"
                    android:layout_alignBaseline="@+id/im_lv_4"
                    android:layout_alignBottom="@+id/im_lv_4"
                    android:layout_alignEnd="@+id/im_lv_2" />

                <Button
                    android:text="৫ম ধাপ"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:id="@+id/but_lv_5"
                    android:textSize="32dp"
                    android:layout_alignBaseline="@+id/but_lv_4"
                    android:layout_alignBottom="@+id/but_lv_4"
                    android:layout_alignStart="@+id/but_lv_2"
                    android:gravity="center"
                    android:textAlignment="center"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
